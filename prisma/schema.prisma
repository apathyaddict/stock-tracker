generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String
  transactions Transaction[]
}

model Transaction {
  id       Int      @id @default(autoincrement())
  symbol   String
  quantity Int
  price    Decimal
  date     DateTime
  userId   String
  user     User     @relation(fields: [userId], references: [id])
}
